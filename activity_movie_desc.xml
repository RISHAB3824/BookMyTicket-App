<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/txt"


    tools:context="com.example.arnabchoudhury.description.MainActivity1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="0dp"
                android:id="@+id/img_moviedesc"
                android:scaleType="fitXY"


                />



            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp"

                >
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Director : "
                        android:textSize="20dp"
                        android:id="@+id/txt_director1"
                        android:layout_margin="10dp"
                        android:layout_column="0"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="S.S.Rajamouli"
                        android:textSize="20dp"
                        android:id="@+id/txt_director2"
                        android:layout_margin="10dp"
                        android:layout_column="1"
                        />


                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Actor : "
                        android:textSize="20dp"
                        android:id="@+id/txt_actor1"
                        android:layout_margin="10dp"
                        android:layout_column="0"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Prabhas"
                        android:id="@+id/txt_actor2"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:layout_column="1"
                        />


                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Actress : "
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:id="@+id/txt_actres1"
                        android:layout_column="0"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Tamanna,anuska"
                        android:textSize="20dp"
                        android:id="@+id/txt_actres2"
                        android:layout_margin="10dp"
                        android:layout_column="1"
                        />


                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Run Time : "
                        android:textSize="20dp"
                        android:id="@+id/txt_time1"
                        android:layout_margin="10dp"
                        android:layout_column="0"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="2hrs 40sec"
                        android:textSize="20dp"
                        android:id="@+id/txt_time2"
                        android:layout_margin="10dp"
                        android:layout_column="1"
                        />


                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Writers : "
                        android:textSize="20dp"
                        android:id="@+id/txt_editor1"
                        android:layout_margin="10dp"
                        android:layout_column="0"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="XYZ"
                        android:textSize="20dp"
                        android:id="@+id/txt_editor2"
                        android:layout_margin="10dp"
                        android:layout_column="1"
                        />


                </TableRow>



            </TableLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="book"
                android:textSize="25dp"
                android:layout_marginTop="15dp"
                android:id="@+id/btn_book"




                android:textStyle="bold"

                />
        </LinearLayout>
    </ScrollView>



</LinearLayout>

